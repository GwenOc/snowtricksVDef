{% extends 'base.html.twig' %}
{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="wrapper">
        <h2 class="text-center mt-5">Veuillez remplir le formulaire d'inscription</h2>

        <div class="container mt-5 border border-primary" id="form-container">
            {{ form_start(formRegister) }}
                {{ form_row(formRegister.username,{'attr':{'placeholder':'choisis un pseudo'}}) }}
                {{ form_row(formRegister.email, {'attr':{'placeholder':'entrez votre email'}}) }}
                {{ form_row(formRegister.password, {'attr':{'placeholder':'choisis un mot de passe'}}) }}
                {{ form_row(formRegister.avatar) }}

                <button type="submit" class="btn btn-primary">envoyer</button>
            {{ form_end(formRegister) }}

         </div>
    </div>
{% endblock %}

