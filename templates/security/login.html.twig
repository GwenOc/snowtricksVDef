{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="wrapper">
        <form class="mt-4" method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Vous êtes déja connecté en tant que {{ app.user.username }}, <a
                        href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h2 class="text-center">Entrez vos informations de connection</h2>

            <div class="container border border-primary mt-5" id="form-container">
                <div class="form-group">
                    <label for="inputUsername">Pseudo</label>
                    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control"
                       required autofocus>
                </div>
                <div class="form-group">
                    <label for="inputPassword">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" required>
                </div>

                <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
                >
                <button class="btn btn-lg btn-primary" type="submit">
                    Sign in
                </button>
                <a href="{{ path('app_forgotten_password') }}">Mot de passe oublié?</a>
            </div>
        </form>
    </div>
{% endblock %}
