<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Bienvenue sur snowtricks!{% endblock %}</title>
        <!-- Google Fonts -->
        <link href="https://fonts.googleapis.com/css?family=Alfa+Slab+One|Roboto&display=swap" rel="stylesheet">
        <!-- Bootstrap CSS File -->
        <link rel="stylesheet" type="text/css" href="https://bootswatch.com/4/lux/bootstrap.min.css">
        <!-- fontawesome File -->
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css">
        <!-- Main Stylesheet File -->
        <link rel="stylesheet" href="{{ asset ('css/style.css') }}" type="text/css" media="screen"/>
    {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <a class="navbar-brand" href="#">SnowTricks</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mr-auto nav-menu">
                    <li class="nav-item active">
                        <a class="nav-link" href="/home">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_home_index', {'_fragment':'tricks'}) }}">Tricks</a>
                    </li>
                    {% if not app.user %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_register') }}">S'incrire</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
                    </li>
                    {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_profile') }}">Mon Profil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}">DÃ©connexion</a>
                    </li>
                    {% endif %}
                </ul>
            </div>
        </nav>

        {% block body %}{% endblock %}

        {# read and display all flash messages #}

        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="ml-3 appMessages flash-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

    <footer class="border-top mt-3">
        <nav class="navbar navbar-expand" id="nav-footer">
            <ul class="navbar-nav  mr-auto nav-menu">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_home_index') }}"><i class="fas fa-home"></i></a>
                </li>
                {% if not app.user %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_register') }}"><i class="fas fa-clipboard-list"></i></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_login') }}"><i class="fas fa-sign-in-alt"></i></a>
                </li>
                {% else %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_profile') }}"><i class="fas fa-user"></i></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_login') }}"><i class="fas fa-sign-out-alt"></i></a>
                </li>
                {% endif %}
            </ul>
        </nav>
        <div class="container-fluid p-5">
            <div class="row">
                <span>Copyright@2019</span>
            </div>
         </div>
    </footer>

    <script src="{{ asset ('js/jquery.min.js') }}"></script>
    <script src="{{ asset ('js/bootstrap.bundle.min.js') }}"></script>
    <script src="{{ asset ('js/main.js') }}"></script>
{% block javascripts %}{% endblock %}
    </body>
</html>
